<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Avatar:</strong>
  <% if @user.avatar.attached? %>
    <h2>original size</h2>
    <%= image_tag @user.avatar %>
    <h2>50x50 size</h2>
    <%= image_tag @user.avatar.variant(resize: "50x50") %>
  <% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
