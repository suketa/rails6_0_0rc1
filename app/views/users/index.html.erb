<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="align-middle"><%= user.name %></td>
        <td align="right">
          <%= link_to 'Show', user, class: 'btn btn-primary btn-sm', role: 'button' %>
        <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary btn-sm', role: 'button' %>
        <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm', role: 'button' %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-primary', role: 'button' %>
